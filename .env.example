# Environment Configuration for CS-Assistant
# Copy this file to .env and fill in your values

# ============================
# BASIC BOT CONFIGURATION
# ============================
BOT_NAME=CS-Assistant
PREFIX=.
SESSION_ID=your_session_id_here

# ============================
# OWNER INFORMATION
# ============================
OWNER_NUMBER=27640498397
OWNER_NAME=CS-Assistant Team

# ============================
# DATABASE CONFIGURATION
# ============================
DATABASE_URL=postgresql://username:password@host:port/database

# ============================
# API KEYS
# ============================
OPENAI_API_KEY=your_openai_api_key
GOOGLE_API_KEY=your_google_api_key
WEATHER_API_KEY=your_weather_api_key

# ============================
# BOT BEHAVIOR SETTINGS
# ============================
AUTO_READ_STATUS=false
AUTO_SAVE_STATUS=false
AUTO_REACT=false
READ_MESSAGE=true

# ============================
# SECURITY SETTINGS
# ============================
ANTI_LINK=false
ANTI_BAD_WORD=false
ANTI_DELETE=false
WELCOME_MESSAGE=true
GOODBYE_MESSAGE=true

# ============================
# MEDIA SETTINGS
# ============================
IMAGE_LOGO=https://telegra.ph/file/b065f0f673cae5452c358.jpg
PACK_NAME=CS-Assistant
AUTHOR_NAME=CS-Assistant Team
MAX_SIZE=500

# ============================
# ADVANCED SETTINGS
# ============================
TIME_ZONE=Africa/Johannesburg
ALWAYS_ONLINE=false
DISABLE_PM=false
ONLY_GROUP=false
ONLY_ADMIN=false

# ============================
# DEPLOYMENT SETTINGS
# ============================
HEROKU_API_KEY=your_heroku_api_key
HEROKU_APP_NAME=your_heroku_app_name

# ============================
# FEATURE TOGGLES
# ============================
CHATBOT=false
AUTO_STATUS_READ=false
AUTO_STATUS_SAVE=false
SHOW_BANNER=true
DISABLE_START_MESSAGE=false

# ============================
# PORT SETTINGS (for deployment)
# ============================
PORT=8000